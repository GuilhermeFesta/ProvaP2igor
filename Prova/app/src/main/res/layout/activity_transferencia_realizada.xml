<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txt_titulo_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferência realizada!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/txt_info_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="para mais detalhes veja o histórico de\ntransações da sua conta."
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/txt_valor_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$689,56"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2D2D2D"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txt_destinatario_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txt_horario_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agora mesmo • 21h45"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_voltar_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar ao menu principal"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:backgroundTint="#9C27B0"
        android:background="@drawable/botao_arredondado"
        android:padding="12dp"/>
</LinearLayout>
